{
  "plugins": [
    "security",
    "mocha",
    "node"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:security/recommended",
    "plugin:mocha/recommended",
    "plugin:node/recommended"
  ],
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "no-console": "off",
    "require-jsdoc": "warn",
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "valid-jsdoc": [
      "warn",
      {
        "requireReturn": false,
        "prefer": {
          "return": "returns"
        }
      }
    ]
  }
}
